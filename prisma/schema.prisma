// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Device {
  id                         String                      @id @default(auto()) @map("_id") @db.ObjectId
  modelNumber                String
  deviceType                 DeviceType
  name                       String                      @unique
  manufacturer               Manufacturer
  specifications             Specifications
  customizableSpecifications CustomizableSpecifications?
  stocks                     Stock[]
  isDefaultOption            Boolean                     @default(false)
  defaultOptionID            String?                     @db.ObjectId
  createdAt                  DateTime                    @default(now())
  updatedAt                  DateTime                    @updatedAt

  inCartDetails  CartDetail[]
  inOrderDetails OrderDetail[]
  otherOptions   Device[]      @relation(name: "Options")
  defaultOption  Device?       @relation(name: "Options", fields: [defaultOptionID], references: [id], onDelete: NoAction, onUpdate: NoAction)

  @@map("devices")
}

type Specifications {
  cpu         String?
  backCamera  String?
  frontCamera String?
  gpu         String?
  screen      String?
  ram         String?
  storage     String?
}

type CustomizableSpecifications {
  cpu           String?
  gpu           String?
  ram           String?
  storage       String?
  os            String?
  mobileNetwork String?
}

model Stock {
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  deviceID      String @db.ObjectId
  colorOptionID String @db.ObjectId
  quantity      Int
  price         Int

  device      Device      @relation(fields: [deviceID], references: [id])
  colorOption ColorOption @relation(fields: [colorOptionID], references: [id])

  @@unique([deviceID, colorOptionID])
  @@map("stocks")
}

model ColorOption {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  color     String
  imageUrls String[] @unique

  stocks Stock[]

  @@map("colorOptions")
}

model User {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  email       String   @unique
  password    String
  name        String
  phoneNumber String
  cart        Cart?
  orders      Order[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("users")
}

model Cart {
  id          String       @id @map("_id") @db.ObjectId
  cartDetails CartDetail[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  user User @relation(fields: [id], references: [id])

  @@map("carts")
}

model CartDetail {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  cartID    String   @db.ObjectId
  deviceID  String   @db.ObjectId
  stockID   String   @db.ObjectId
  quantity  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  cart   Cart   @relation(fields: [cartID], references: [id])
  device Device @relation(fields: [deviceID], references: [id])

  @@unique([cartID, deviceID, stockID])
  @@map("cartDetails")
}

model Order {
  id           String        @id @default(auto()) @map("_id") @db.ObjectId
  userID       String        @unique @db.ObjectId
  orderDetails OrderDetail[]
  total        Int
  createdAt    DateTime      @default(now())

  user User @relation(fields: [userID], references: [id])

  @@map("orders")
}

model OrderDetail {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  orderID  String @db.ObjectId
  deviceID String @db.ObjectId
  colorID  String @db.ObjectId
  price    Int
  quantity Int
  total    Int

  order  Order  @relation(fields: [orderID], references: [id])
  device Device @relation(fields: [deviceID], references: [id])

  @@unique([orderID, deviceID, colorID])
  @@map("orderDetails")
}

enum DeviceType {
  laptop
  smartphone
  tablet
}

enum Manufacturer {
  Acer
  Apple
  Asus
  Dell
  Gigabyte
  HP
  Lenovo
  LG
  Microsoft
  MSI
  Nokia
  OPPO
  Samsung
  Realme
  Xiaomi
  Vivo
}
